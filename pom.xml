                    <scope>runtime</scope>
               </dependency>
               <dependency>
                    <groupId>org.openflexo</groupId>
                    <artifactId>powerpointconnector-ui</artifactId>
                    <version>${ta.version}</version>
                    <scope>runtime</scope>
               </dependency>
               <dependency>
                    <groupId>org.openflexo</groupId>
                    <artifactId>freeplaneconnector</artifactId>
