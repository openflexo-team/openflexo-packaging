                    <version>4.10</version>
               </dependency>
               <dependency>
                    <groupId>org.openflexo</groupId>
                    <artifactId>flexodocresourcecenter</artifactId>
                    <scope>runtime</scope>
                    <version>${flexocore.version}</version>
               </dependency>
          </dependencies>
     </dependencyManagement>
</project>
