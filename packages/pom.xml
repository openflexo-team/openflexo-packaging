<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openflexo.</groupId>
        <artifactId>openflexo-production</artifactId>
	<version>0.4-RC1</version>
    </parent>
    <artifactId>packages</artifactId>
    <packaging>pom</packaging>
    <name>Executables and Packaging</name>
    <modules>
        <module>flexosemantics</module>
        <module>flexosemanticsplus</module>
        <module>freemodelling</module>
        <module>flexomaintainer</module>
    </modules>
    <properties>
     	<modules.version>1.8.0-RC1</modules.version>
     	<ta.version>1.8.0-RC1</ta.version>
        <main.class>org.openflexo.Flexo</main.class>
        <vm.args>-Xmx512M -XX:MaxPermSize=128M</vm.args>
        <logging.args>-Djava.util.logging.config.file=Config/logging.properties</logging.args>
        <debug.args />
        <productiontools.version>0.4-RC1</productiontools.version>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <classpathScope>runtime</classpathScope>
                    <executable>java</executable>
                    <commandlineArgs>
                        ${os.exec.args} ${logging.args} ${vm.args} ${debug.args} -classpath %classpath ${main.class}
                    </commandlineArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>mac-osx</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <os.exec.args>
                    -Xverify:all -Xdock:name=Openflexo -Dapple.laf.useScreenMenuBar=true
                </os.exec.args>
            </properties>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>linux</family>
                </os>
            </activation>
            <properties>
                <os.exec.args />
            </properties>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <os.exec.args>
                    -Dswing.defaultlaf=com.sun.java.swing.plaf.windows.WindowsLookAndFeel
                </os.exec.args>
            </properties>
        </profile>
        <profile>
            <id>debug</id>
            <properties>
                <debug.args>
                    -Xdebug -Xrunjdwp:transport=dt_socket,address=8001,server=y,suspend=y
                </debug.args>
            </properties>
        </profile>
    </profiles>
    <dependencyManagement>
    	<dependencies>
    		<dependency>
    			<groupId>org.openflexo</groupId>
    			<artifactId>packaging-tools</artifactId>
    			<version>${productiontools.version}</version>
    		</dependency>
    	</dependencies>
    </dependencyManagement>
</project>
